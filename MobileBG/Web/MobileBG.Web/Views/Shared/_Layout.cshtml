@using MobileBG.Web
@using MobileBG.Web.ViewModels
@using Microsoft.AspNetCore.Identity
@using MobileBG.Common


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    @await this.RenderSectionAsync("Head", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark pt-2" style="background-color:#00A2ED">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="img-responsive" style="width: 9rem; height:4rem" src="~/MobileBG.png" alt="logo">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarsExample07">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="All">Всички коли</a>
                        </li>

                        @if (this.User.Identity.IsAuthenticated && !this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="Create">Създай кола</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="Mine">Моите коли</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Blog" asp-action="All">Блог</a>
                        </li>
                         @if (this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Chat">Чат</a>
                            </li>
                        }

                        @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="http://example.com" id="dropdown07" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Администрация</a>
                                <div class="dropdown-menu" aria-labelledby="dropdown07">
                                    <a class="dropdown-item " asp-area="Administration" asp-controller="Car" asp-action="Unapproved">Неодобрени Коли</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="Administration" asp-controller="Make" asp-action="All">Всички марки</a>
                                    <a class="dropdown-item" asp-area="Administration" asp-controller="Make" asp-action="Create">Създай марка</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="Administration" asp-controller="City" asp-action="All">Всички градове</a>
                                    <a class="dropdown-item" asp-area="Administration" asp-controller="City" asp-action="Create">Създай Град</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="Administration" asp-controller="Blog" asp-action="Create">Добави блог статия</a>
                                </div>
                            </li>
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3 mt-5 mb-5">
            @this.RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-dark"  style="background-color:#00A2ED">
        <div class="container">
            &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a style="text-decoration:none;" class="text-light" href="https://github.com/SimeonPetkov1999/MobileBG">Open source project</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/5601b1cfd4.js" crossorigin="anonymous"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
