@using MobileBG.Web.ViewModels.Cars
@model SingleCarViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
        body {
            font-family: Arial;
        }

    </style>
</head>
<body>

    <h1 class="text-center" style="font-size:170px">For sale</h1>
    <p class="text-center" style="font-size: 90px;">@Model.Make @Model.Model</p>
    <br />
    <br />
    <br />

    <table class="table table-bordered border-primary p-1">
        <tr>
            <td class="p-4" style="font-size:50px; border: 5px solid">Year: @this.Model.YearMade</td>
            <td class="p-4" style="font-size:50px; border: 5px solid">Horse power: @this.Model.HorsePower</td>
            <td class="p-4" style="font-size:50px; border: 5px solid">Km: @this.Model.Km</td>
        </tr>
        <tr>
            <td class="p-4" style="font-size:50px; border: 5px solid">City: @this.Model.CityName</td>
            <td class="p-4" style="font-size:50px; border: 5px solid">Petrol type: @this.Model.PetrolType</td>
            <td class="p-4" style="font-size:50px; border: 5px solid; border-right-color:black; border-bottom-color:black; color:red">Price: @this.Model.Price lv.</td>
        </tr>
    </table>

    @if (this.Model.PhoneNumber != null)
    {
        <p class="text-center" style="font-size:80px; margin-top:40px">Phone number: @this.Model.PhoneNumber</p>
    }


</body>
</html>